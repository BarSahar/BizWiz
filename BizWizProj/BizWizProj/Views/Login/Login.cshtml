
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm(@*"Login", "Login", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { id = "form1" }*@))
{
    <div>@Html.Label("Login name")</div>
    <div>@Html.TextBox("name")</div>
    <div>@Html.Label("Password")</div>
    <div>@Html.Password("password")</div>
    <input type="submit" value"Login"/>
}
